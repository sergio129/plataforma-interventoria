# Configuración del entorno
NODE_ENV=development
PORT=3000

# Base de datos MongoDB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/AseoriaJuridica

# JWT Secret (cambiar por una clave más segura en producción)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configuración de email (opcional, para futuras funcionalidades)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# URLs del frontend (para CORS)
FRONTEND_URL=http://localhost:3001